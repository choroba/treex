      <value>atom</value>
      <value>coap</value>
      <value>complex</value>
      <value>dphr</value>
      <value>fphr</value>
      <value>list</value>
      <value>qcomplex</value>
    </choice>
  </type>

  <type name="u-t.type"> <!-- !!! cloned from t-layer's t-a.type; needs to be revisited! -->
